<div class="row">
  <div class="col-md-4 col-lg-3">
    <button type="button" class="btn btn-info file-search-button" id="file-meta-tag-search">Meta Tag Search</button>
  </div>
  <div class="col-md-4 col-lg-3">
    <button type="button" class="btn btn-info file-search-button" id="file-advanced-search">Advanced Search</button>
  </div>
  <div class="col-md-3 col-lg-2">
    <a href="/file-search">
      <button type="button" class="btn btn-info file-search-button" id="clear-file-search" style="padding: 0 1em;">Clear all filters</button>
    </a>
  </div>
</div>
<ul class="default_tag_clouds">
  {% for term_vid,tags_vid in tags %}
    <div class = "tags-cloud">
      {% for term_id, term in tags_vid %}
        <li class="tag_clouds_term {{ term.class }}">
          <a data-tid = "{{ term_id }}" href="{{ term.url }}">{{ term.name }}</a>
        </li>
      {% endfor %}
    </div>
  {% endfor %}
</ul>
{{ attach_library('extranet/file-search') }}
